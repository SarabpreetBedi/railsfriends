<div class="card">
  <h5 class="card-header text-primary"> <%= @friend.first_name %>
       <%= @friend.last_name %></h5>
  <div class="card-body">
    <h5 class="card-title text-info"><%= @friend.first_name %></h5>
    <p class="card-text text-info"><%= @friend.email %>  |
      <%= @friend.phone %>  |
      <%= @friend.twitter %>
      </p>
     <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %>
     
     <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger " %>
          
    <%= link_to 'Back', friends_path ,class:"btn btn-dark" %>
  </div>
</div>

